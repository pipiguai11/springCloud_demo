<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
           http://dubbo.apache.org/schema/dubbo
           http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!--
    多协议配置实现
     -->

    <dubbo:application name="dubbo-provider"/>
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <!--定义通信协议与端口，定义多个不同的协议 -->
    <dubbo:protocol name="dubbo" port="30880"/>
    <dubbo:protocol name="rmi" port="1099"/>
    <dubbo:protocol name="hessian" port="8080" />

    <!-- 同时使用多种协议暴露服务，消费者可以用任意一种协议访问该服务 -->
    <dubbo:service interface="com.lhw.dubbo_api.service.UserService" ref="userServiceImpl" protocol="rmi,hessian"/>

    <!-- 使用dubbo协议暴露服务，默认其实就是dubbo -->
    <bean id="addrServiceImpl" class="com.lhw.provider.service.AddrServiceImpl"/>
    <dubbo:service interface="com.lhw.dubbo_api.service.AddrService" ref="addrServiceImpl" protocol="dubbo"/>

</beans>